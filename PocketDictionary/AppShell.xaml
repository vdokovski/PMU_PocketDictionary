<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PocketDictionary.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PocketDictionary.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="PocketDictionary">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage" />
    
    <ShellContent Title="Deck Details" Route="DeckDetailsPage" ContentTemplate="{DataTemplate local:DeckDetailsPage}" />
    
    <ShellContent Title="Create Flashcard" Route="CreateFlashcardPage" ContentTemplate="{DataTemplate local:CreateFlashcardPage}" />

    <ShellContent Title="Flashcard Details" Route="FlashcardDetailsPage" ContentTemplate="{DataTemplate local:FlashcardDetailsPage}" />

    <ShellContent Title="Review Deck" Route="ReviewPage" ContentTemplate="{DataTemplate local:ReviewPage}" />
</Shell>
