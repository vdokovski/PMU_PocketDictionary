<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PocketDictionary.ViewModels"
             x:Class="PocketDictionary.Views.ReviewPage"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Top Section: Deck Name and Remaining Cards -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
            <Label Text="{Binding Deck.Name}" 
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Start" />

            <Label Text="{Binding RemainingFlashcardsText}" 
                   FontSize="18"
                   TextColor="White"
                   BackgroundColor="#f44336"
                   Padding="10"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="Center"
                   Grid.ColumnSpan="2" 
                   Margin="0,10,0,0" />
        </Grid>

        <!-- Flashcard Area -->
        <Grid Grid.Row="1">
            <SwipeView x:Name="CardSwipeView" Threshold="100" 
                       BackgroundColor="Transparent"
                       IsEnabled="{Binding HasBeenFlipped, Converter={StaticResource InverseBoolConverter}}">
                <SwipeView.LeftItems>
                    <SwipeItem Text="Flip"
                               BackgroundColor="LightGray"
                               Command="{Binding FlipCardCommand}"
                               Invoked="OnFlipInvoked" />
                </SwipeView.LeftItems>
                
                <SwipeView.RightItems>
                    <SwipeItem Text="Flip"
                               BackgroundColor="LightGray"
                               Command="{Binding FlipCardCommand}"
                               Invoked="OnFlipInvoked" />
                </SwipeView.RightItems>

                <Frame x:Name="CardFrame"
                       BackgroundColor="#f44336"
                       BorderColor="#d32f2f"
                       CornerRadius="20"
                       Padding="40"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       HeightRequest="300"
                       WidthRequest="300"
                       HasShadow="True">

                    <Label Text="{Binding CurrentFlashcardText}" 
                           FontSize="28"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />

                </Frame>
            </SwipeView>
        </Grid>

        <!-- Bottom Section: Buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" Margin="0,20,0,0">
            <Button Text="I Don't Know"
                    BackgroundColor="#f44336"
                    TextColor="White"
                    FontSize="18"
                    Command="{Binding DontKnowCommand}"
                    IsEnabled="{Binding HasBeenFlipped}"
                    HorizontalOptions="Fill"
                    Margin="0,0,5,0" />

            <Button Text="I Know"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontSize="18"
                    Command="{Binding KnowCommand}"
                    IsEnabled="{Binding HasBeenFlipped}"
                    HorizontalOptions="Fill"
                    Grid.Column="1"
                    Margin="5,0,0,0" />
        </Grid>

    </Grid>
</ContentPage>