<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:PocketDictionary.ViewModels"
             x:Class="PocketDictionary.Views.FlashcardDetailsPage"
             Title="Flashcard Details">

    <Grid Padding="20" RowDefinitions="*, Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20">
                <!-- Front Side -->
                <VerticalStackLayout>
                    <Label Text="Front Side" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           Margin="0,0,0,5"/>
                    
                    <Frame BackgroundColor="#f05454" 
                           Padding="20" 
                           BorderColor="Transparent" 
                           CornerRadius="10">
                        <Entry Text="{Binding Flashcard.Front}" 
                               IsReadOnly="{Binding IsReadOnly}" 
                               TextColor="White" 
                               FontSize="18"
                               HorizontalOptions="Fill"
                               VerticalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Back Side -->
                <VerticalStackLayout>
                    <Label Text="Back Side" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           Margin="0,0,0,5"/>
                    
                    <Frame BackgroundColor="#f05454" 
                           Padding="20" 
                           BorderColor="Transparent" 
                           CornerRadius="10">
                        <Entry Text="{Binding Flashcard.Back}" 
                               IsReadOnly="{Binding IsReadOnly}" 
                               TextColor="White" 
                               FontSize="18"
                               HorizontalOptions="Fill"
                               VerticalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Consecutive Answers In A Row -->
                <VerticalStackLayout>
                    <Label Text="Consecutive Correct Answers" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           Margin="0,0,0,5"/>
                    
                    <Frame BorderColor="LightGray" 
                           Padding="20" 
                           CornerRadius="10">
                        <Label Text="{Binding Flashcard.CorrectAnswersInARow}" 
                               FontSize="18"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Due Date Information -->
                <VerticalStackLayout>
                    <Label Text="Next Review Date" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           Margin="0,0,0,5"/>
                    
                    <Frame BorderColor="LightGray" 
                           Padding="20" 
                           CornerRadius="10">
                        <Label Text="{Binding Flashcard.NextReviewDate, StringFormat='{0:dd.MM.yyyy}'}" 
                               FontSize="18"/>
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Edit/Save Button -->
        <Button Grid.Row="1" 
                Text="{Binding EditButtonText}" 
                Command="{Binding ToggleEditModeCommand}"
                BackgroundColor="DarkBlue"
                TextColor="White"
                FontSize="20"
                Margin="0,20,0,0"
                HorizontalOptions="Fill"/>
    </Grid>
</ContentPage> 